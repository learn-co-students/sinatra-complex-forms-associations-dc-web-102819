<h1>Create a new Human</h1>

<form action="/owners" method="POST">
  <label>Name:</label>

  <br>

  <input type="text" name="owner[name]">

  <p>Select existing pets(s) or create a new one below.</p>

  <h3>Existing Pets</h3>
  <% @pets.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" id="<%= pet.id %>" value="<%= pet.id %>"><%= pet.name %><br>
  <% end %>
  <br>

  <h3>New Pet</h3>
  <div style="padding: 0px 0px 15px;">
	<label>Pet Name: </label>
	<input type="type" name="pet[name]" id="pet_name">
  </div>
  <div>
	  <input type="submit" value="Create Owner">
  </div>
</form>
