<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br>

  <input type="text" name="pet_name">

  <p>Adopt an existing Human(s) or create a new one below.</p>

  <h3>Existing Humans</h3>
  <% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_ids][]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %><br>
  <% end %>
  <br>

  <h3>New Human</h3>
  <div style="padding: 0px 0px 15px;">
	<label>Human Name: </label>
	<input type="type" name="owner[name]" id="owner_name">
  </div>
  <div>
	  <input type="submit" value="Create Pet">
  </div>
</form>
